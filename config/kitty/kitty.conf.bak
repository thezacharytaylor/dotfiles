# Install via https://github.com/ronniedroid/getnf
# Verify installation via `kitty list-fonts | grep Jet`
# font_family JetBrainsMono Nerd Font Mono Regular
# font_family Hack Nerd Font Mono Regular
# font_family Hack Nerd Font Mono FC Ligatured Regular
# font_family Hack Nerd Font Mono JBM Ligatured Regular
# font_family Fira Code Regular
# font_family FantasqueSansM Nerd Font Mono Bold
font_family JetBrainsMono Nerd Font Mono Regular
bold_font JetBrainsMono Nerd Font Mono Bold
italic_font JetBrainsMono Nerd Font Mono Italic
bold_italic_font JetBrainsMono Nerd Font Mono Bold Italic
font_size 15
adjust_line_height 155%

cursor_blink_interval 0
window_padding_width 10
hide_window_decorations yes
remember_window_size yes
initial_window_width 680
initial_window_height 400
enable_audio_bell yes
repaint_delay    10
allow_remote_control yes
tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}
# editor /Users/zacharytaylor/.local/bin/lvim
# startup_session ~/Kinetic/

# BEGIN_KITTY_THEME
# RosÃ© Pine
include current-theme.conf
# END_KITTY_THEME

map ctrl+space>c new_tab_with_cwd
map ctrl+space>ctrl+c new_tab_with_cwd
map ctrl+space>n next_tab
map ctrl+space>ctrl+n next_tab
map ctrl+space>p previous_tab
map ctrl+space>ctrl+p previous_tab
map ctrl+space>d close_tab
map ctrl+space>ctrl+d close_tab
map ctrl+space>w new_os_window
map ctrl+space>ctrl+w new_os_window
map opt+space>- launch --cwd=current --location=hsplit
map ctrl+space>| launch --cwd=current --location=vsplit
map ctrl+space>h neighboring_window left
map ctrl+space>l neighboring_window right
map ctrl+space>j neighboring_window down
map ctrl+space>k neighboring_window up
